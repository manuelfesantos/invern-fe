{
  "include": ["api/**/*.ts"],
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "target": "esnext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["esnext"],
    "strict": true,
    "skipLibCheck": true,
    "types": ["@cloudflare/workers-types", "jest"],
    "resolveJsonModule": true,
    "paths": {
      "@address-db": ["libs/db/address"],
      "@address-entity": ["libs/entities/address"],
      "@auth-utils": ["libs/utils/auth"],
      "@cart-db": ["libs/db/cart"],
      "@cart-entity": ["libs/entities/cart"],
      "@cart-module": ["libs/modules/cart"],
      "@checkout-session-db": ["libs/db/checkout-session"],
      "@checkout-session-entity": ["libs/entities/checkout-session"],
      "@collection-db": ["libs/db/collection"],
      "@collection-entity": ["libs/entities/collection"],
      "@collection-module": ["libs/modules/collection"],
      "@config-module": ["libs/modules/config"],
      "@country-db": ["libs/db/country"],
      "@country-entity": ["libs/entities/country"],
      "@country-module": ["libs/modules/country"],
      "@crypto-utils": ["libs/utils/crypto"],
      "@currency-entity": ["libs/entities/currency"],
      "@db": ["libs/db"],
      "@encoding-utils": ["libs/utils/encoding"],
      "@error-handling-utils": ["libs/utils/error-handling"],
      "@global-entity": ["libs/entities/global"],
      "@http-entity": ["libs/entities/http"],
      "@http-utils": ["libs/utils/http"],
      "@image-db": ["libs/db/image"],
      "@image-entity": ["libs/entities/image"],
      "@jwt-entity": ["libs/entities/jwt"],
      "@jwt-utils": ["libs/utils/jwt"],
      "@kv-adapter": ["libs/adapters/kv"],
      "@logger-entity": ["libs/entities/logger"],
      "@logger-utils": ["libs/utils/logger"],
      "@mail-utils": ["libs/utils/mail"],
      "@mocks-utils": ["libs/utils/__mocks__"],
      "@order-db": ["libs/db/order"],
      "@order-entity": ["libs/entities/order"],
      "@order-module": ["libs/modules/order"],
      "@payment-entity": ["libs/entities/payment"],
      "@payment-db": ["libs/db/payment"],
      "@product-db": ["libs/db/product"],
      "@product-entity": ["libs/entities/product"],
      "@product-module": ["libs/modules/product"],
      "@r2-adapter": ["libs/adapters/r2"],
      "@request-entity": ["libs/entities/request"],
      "@response-entity": ["libs/entities/response"],
      "@schema": ["db/schema"],
      "@string-utils": ["libs/utils/string"],
      "@stripe-adapter": ["libs/adapters/stripe"],
      "@stripe-entity": ["libs/entities/stripe"],
      "@tax-entity": ["libs/entities/tax"],
      "@timer-utils": ["libs/utils/timer"],
      "@user-db": ["libs/db/user"],
      "@user-entity": ["libs/entities/user"],
      "@user-module": ["libs/modules/user"]
    }
  }
}